<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/stardate</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <listener>
        <listener-class>Config</listener-class>
    </listener>
    <servlet>
        <servlet-name>CheckDB</servlet-name>
        <servlet-class>CheckDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PopulateDB</servlet-name>
        <servlet-class>PopulateDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnPopulateDB</servlet-name>
        <servlet-class>UnPopulateDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Second</servlet-name>
        <servlet-class>Second</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KillSession</servlet-name>
        <servlet-class>KillSession</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ParseEvents</servlet-name>
        <servlet-class>ParseEvents</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParseEvents_logged_in_user</servlet-name>
        <servlet-class>ParseEvents_logged_in_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PopulateEventDB</servlet-name>
        <servlet-class>PopulateEventDB</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>CheckDB</servlet-name>
        <url-pattern>/CheckDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PopulateDB</servlet-name>
        <url-pattern>/PopulateDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnPopulateDB</servlet-name>
        <url-pattern>/UnPopulateDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Second</servlet-name>
        <url-pattern>/Second</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KillSession</servlet-name>
        <url-pattern>/KillSession</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ParseEvents</servlet-name>
        <url-pattern>/ParseEvents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParseEvents_logged_in_user</servlet-name>
        <url-pattern>/ParseEvents_logged_in_user</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>PopulateEventDB</servlet-name>
        <url-pattern>/PopulateEventDB</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <location>/error.jsp</location>        
    </error-page>
</web-app>
